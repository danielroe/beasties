{
  "name": "beasties-webpack-plugin",
  "version": "0.4.1",
  "description": "Webpack plugin to inline critical CSS and lazy-load the rest.",
  "author": "The Chromium Authors",
  "contributors": [
    {
      "name": "Jason Miller",
      "email": "developit@google.com"
    },
    {
      "name": "Janicklas Ralph",
      "email": "janicklas@google.com"
    },
    {
      "name": "Daniel Roe",
      "email": "daniel@roe.dev",
      "url": "https://roe.dev"
    }
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielroe/beasties",
    "directory": "packages/beasties-webpack-plugin"
  },
  "keywords": [
    "critical css",
    "inline css",
    "critical",
    "beasties",
    "webpack plugin",
    "performance"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "scripts": {
    "build": "unbuild",
    "docs": "documentation readme src -q --no-markdown-toc -a public -s Usage --sort-order alpha",
    "prepack": "npm run -s build"
  },
  "peerDependencies": {
    "html-webpack-plugin": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "html-webpack-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "beasties": "workspace:*",
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "@types/jsdom": "27.0.0",
    "css-loader": "7.1.4",
    "documentation": "14.0.3",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.6.6",
    "mini-css-extract-plugin": "2.10.0",
    "unbuild": "3.6.1",
    "webpack": "5.105.2"
  }
}
